{
  "name": "polygon-parts-cli",
  "version": "1.1.0",
  "description": "This CLI utility will parse and upload CSV parts data into wfs db (pg)",
  "main": "src/index.ts",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json  && npm run assets:copy",
    "start": "npm run build && cd dist && node ./index.js",
    "start:dev": "npm run build && cd dist && node --enable-source-maps ./index.js",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles ./package.json dist",
    "clean": "rimraf dist"
  },
  "author": "MapColonies",
  "license": "ISC",
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "config": "^3.3.9",
    "csv": "^6.3.3",
    "pg": "^8.11.3",
    "wellknown": "^0.5.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/config": "^3.3.2",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.10.7",
    "@types/wellknown": "^0.5.7",
    "@types/yargs": "^17.0.29",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  }
}
